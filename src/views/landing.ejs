<!-- views/landing.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Welcome to the Event Management System</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      background-color: #f5f5f5;
      text-align: center;
      color: #333;
    }

    header {
      background-color: #3498db;
      padding: 1em 0;
      color: #fff;
    }

    main {
      padding: 2em;
    }

    footer {
      background-color: #333;
      color: #fff;
      padding: 1em 0;
      position: fixed;
      bottom: 0;
      width: 100%;
    }

    h1 {
      margin-bottom: 1em;
    }

    p {
      font-size: 1.2em;
      margin-bottom: 2em;
    }

    .btn-container {
      display: flex;
      justify-content: center;
      gap: 1em;
      margin-top: 2em;
    }

    .btn {
      display: inline-block;
      padding: 1em 2em;
      font-size: 1.2em;
      text-decoration: none;
      color: #fff;
      background-color: #3498db;
      border-radius: 5px;
      transition: background-color 0.3s;
    }

    .btn:hover {
      background-color: #2980b9;
    }
  </style>
</head>

<body>
  <header>
    <h1>Welcome to the Event Management System</h1>
  </header>
  <main>
    <p>Explore and organize amazing events with our Event Management System.</p>
    <div class="btn-container">
      <a href="/login" class="btn">Login</a>
      <a href="/register" class="btn">Sign Up</a>
    </div>
  </main>
  <footer>
    <p>&copy; 2024 Event Management System</p>
  </footer>
</body>

</html>